<div class="container h-100 mt-5">
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-door-open"></i> Afin d'effectuer votre traitemnt, vous devez sélectionner <strong>un fichier à traiter</strong>!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{#form}}
    <form {{#action}}action="{{action}}"{{/action}} {{#method}}method="{{method}}"{{/method}}>
        {{#select}}
        <div class="input-group mb-3">
            {{#label}}
            <label {{#class}}class="{{class}}"{{/class}} {{#for}}for="{{for}}"{{/for}}><span>{{#fontawesome}}<i class="{{fontawesome}}"></i> {{/fontawesome}}{{text}}</span></label>
            {{/label}}
            <select {{#ariaLabel}}aria-label="{{ariaLabel}}"{{/ariaLabel}} {{#class}}class="{{class}}"{{/class}} {{#id}}id="{{id}}"{{/id}} {{#multiple}}multiple{{/multiple}} {{#name}}name="{{name}}"{{/name}} {{#required}}required{{/required}}>
                {{#optiondefaut}}
                    <option {{#disabled}}disabled{{/disabled}} {{#selected}}selected{{/selected}} value="">{{#texte}}{{texte}}{{/texte}}</option>
                {{/optiondefaut}}
                {{#options}}
                    <option value="{{{value}}}">{{{text}}}</option>
                {{/options}}
                {{^options}}
                    <option disabled selected>Vous n'avez déposé aucun fichier</option>
                {{/options}}
            </select>
        </div>
        {{/select}}
        {{#submit}}
        <div class="d-grid gap-2 col-6 mx-auto">
            <button {{#class}}class="{{class}}"{{/class}} {{#type}}type="{{type}}"{{/type}}>{{#fontawesome}}<i class="{{fontawesome}}"></i> {{/fontawesome}}{{texte}}</button>
        </div>
        {{/submit}}
    </form>
    {{/form}}
</div>