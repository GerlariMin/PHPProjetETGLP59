<div role="alert" aria-live="assertive" aria-atomic="true" class="toast bg-danger fade show mx-auto mt-3" data-bs-autohide="false">
    <div class="toast-header">
        <i class="{{iClass}}"></i>
        <strong class="ms-1 me-auto">{{strong}}</strong> 
        <small>{{small}}</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        {{message}}
    </div>
</div>